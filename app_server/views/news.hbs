<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header }}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each newsData.latestNews}}
									  <li>
									    <a href="{{url}}">{{title}}</a>
									  </li>
									{{/each}}
								</ul>
								<h3>Vacation Tips</h3>
								<ul>
									{{#each newsData.vacationTips}}
									  <li>
									    <a href="{{url}}">{{title}}</a>
									  </li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								<img src="{{newsData.mainArticle.image}}" alt="Img">
								<h2>{{newsData.mainArticle.title}}</h2>
								<span class="time">{{newsData.mainArticle.date}}<br> by: {{newsData.mainArticle.author}}</span>
								{{#each newsData.mainArticle.content}}
								  <p>{{this}}</p>
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer }}
	</div>
</body>
</html>